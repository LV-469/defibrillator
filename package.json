{
  "name": "backend",
  "version": "1.0.0",
  "description": "backend part of defibrillator project",
  "main": "server.js",
  "scripts": {
    "client": "cd client/ && yarn start",
    "server": "nodemon start.js",
    "dev": "concurrently --kill-others-on-fail \"yarn server\" \"yarn client\"",
    "start": "node start.js",
    "lint": "eslint server.js ./config ./consts ./middleware ./models ./routes ./shared ./emails ./websoket --ext .js",
    "test-client": "cd client/ && yarn test",
    "test-server": "cross-env NODE_ENV=node jest routes --coverage"
  },
  "jest": {
    "testEnvironment": "node",
    "testPathIgnorePatterns": [
      "/client/"
    ],
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/middleware",
      "/websocket"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && yarn test-server && yarn test-client"
    }
  },
  "lint-staged": {
    "*.(js|jsx)": [
      "yarn lint --fix",
      "git add"
    ]
  },
  "keywords": [
    "nodejs",
    "express",
    "mongodb"
  ],
  "author": "LV-469",
  "license": "ISC",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-validator": "^6.3.1",
    "jsonwebtoken": "^8.5.1",
    "long-timeout": "^0.1.1",
    "mongoose": "^5.8.6",
    "nodemailer": "^6.4.2",
    "passport": "^0.4.1",
    "passport-jwt": "^4.0.0",
    "password-validator": "^5.0.3",
    "socket.io": "^2.3.0"
  },
  "devDependencies": {
    "concurrently": "^5.0.2",
    "cross-env": "^7.0.0",
    "eslint": "^6.6.0",
    "eslint-config-node": "^4.0.0",
    "eslint-config-prettier": "^6.9.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-node": "^11.0.0",
    "eslint-plugin-prettier": "^3.1.2",
    "husky": "^4.2.0",
    "jest": "24.9.0",
    "lint-staged": "^10.0.2",
    "nodemon": "^2.0.2",
    "prettier": "^1.19.1",
    "supertest": "^4.0.2"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/LV-469/defibrillator"
  }
}
